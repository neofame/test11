using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Web.Http;

namespace token.Controller
{
    public class ValuesController : ApiController
    {
        // GET api/values  
        [HttpGet]
        [ActionName("GetAll")]

        public List<Employe> GetAllEmploye()
        {
            List<Employe> emplist = new List<Employe>();
            emplist.Add(new Employe
            {

                Empid = 1,
                Empname = "atul",


            });
            emplist.Add(new Employe
            {

                Empid = 2,
                Empname = "taj",


            });
            return emplist;
        }


        [ActionName("Getdetail")]
        public Employe GetEmployeDetail(int id)
        {

            return new Employe
            {

                Empid = 1,
                Empname = "atul"

            };

        }

        [Authorize]
        public Employe GetEmployeDetailByTest(int id)
        {

            return new Employe
            {

                Empid = 2,
                Empname = "taj"

            };

        }
    }
}



                response = client.GetAsync(baseAddress + "api/values/GetAll").Result;
                Console.WriteLine(response);
                Console.WriteLine(response.Content.ReadAsStringAsync().Result);

                response = client.GetAsync(baseAddress + "api/values/Getdetail/1").Result;
                Console.WriteLine(response);
                Console.WriteLine(response.Content.ReadAsStringAsync().Result);

                response = client.GetAsync(baseAddress + "api/values/GetEmployeDetailByTest/2").Result;
                Console.WriteLine(response);
                Console.WriteLine(response.Content.ReadAsStringAsync().Result);




            config.Routes.MapHttpRoute(
            name: "GetEmployeDetailByTest",
            routeTemplate: "api/values/GetEmployeDetailByTest/{id}",
            defaults: new { controller = "Values", action = "GetEmployeDetailByTest", id = UrlParameter.Optional }

            );



            config.Routes.MapHttpRoute(name : "GetYou", routeTemplate: "{controller}/", new { controller = "Login", action = "GetYou" });

            config.Routes.MapHttpRoute(name: "GetAll", routeTemplate: "{controller}/{action}/{id}",
                 new { controller = "Login", action = "GetId", id = UrlParameter.Optional });

            config.Routes.MapHttpRoute(name: "GetId", routeTemplate: "{controller}/getid/{id}",
             new { controller = "Login", action = "GetAll", id = UrlParameter.Optional });
